<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <ImageView
        android:id="@+id/score_panel"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:background="@drawable/score2x" />

    <ImageView
        android:id="@+id/buttons"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/score_panel"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttons"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/score_panel"
        android:layout_alignTop="@+id/buttons"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btn_post"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/buttons"
        android:layout_toEndOf="@+id/btn_cancel"
        android:background="@android:color/transparent" />


</RelativeLayout>