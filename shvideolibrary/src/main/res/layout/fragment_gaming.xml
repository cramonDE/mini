<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_gaming"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:max="30"
        android:progressTint="@color/coundownColor"
        android:progressBackgroundTint="@color/gray_background"
        android:progress="50"
        android:indeterminate="false"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/ibt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80pt"
        android:textColor="@color/white"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/imageView_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rec"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:paddingBottom="30dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btn_countdown"
                android:background="@drawable/roundbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_gamecountdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="100dp"
                android:textSize="20pt"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"/>

        </FrameLayout>

    </RelativeLayout>
</RelativeLayout>