<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 矩形的圆角弧度 -->
            <corners
                android:radius="15dp" />
            <!-- 矩形的填充色 -->
            <solid
                android:color="@color/button_grey" />
            <size
                android:width="100dp"
                android:height="15dp"/>
            <stroke
                android:color="@color/button_red"
                android:width="1dp" />
        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 矩形的圆角弧度 -->
            <corners
                android:radius="15dp" />
            <!-- 矩形的填充色 -->
            <solid
                android:color="@color/button_grey_dark" />
            <size
                android:width="100dp"
                android:height="15dp"/>
            <stroke
                android:color="@color/button_red"
                android:width="1dp" />
        </shape>
    </item>
</selector>